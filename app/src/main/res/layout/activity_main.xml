<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.MainActivity">


    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:text="@string/name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/tvName" android:layout_weight="1"
                    android:textSize="18sp"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/tvNameLabel"
                    android:layout_marginStart="8dp" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
                    app:layout_constraintHorizontal_bias="0.0"/>
            <TextView
                    android:text="@string/phone_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/tvPhoneNum" android:layout_weight="1"
                    android:textSize="18sp"
                    app:layout_constraintTop_toBottomOf="@+id/tvName"
                    android:layout_marginEnd="4dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp" android:layout_margin="8dp"
                    app:layout_constraintStart_toEndOf="@+id/tvPhoneLabale" android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"/>
            <TextView
                    android:text="Name:"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvNameLabel"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                    android:textSize="18sp" android:layout_marginStart="24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp" app:layout_constraintBottom_toTopOf="@+id/tvPhoneNum"
                    app:layout_constraintVertical_bias="1.0" android:layout_margin="8dp"/>
            <TextView
                    android:text="Career Summary:"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/tvCareerLabel"
                    android:textSize="18sp"
                    android:layout_margin="8dp"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/tvSkills"
                    android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp"/>
            <TextView
                    android:text="Educational Qualifications"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvEducations"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="4dp" android:layout_marginRight="4dp"
                    android:textSize="18sp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvCareer"
            />
            <TextView
                    android:text="@string/skills"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/tvSkills"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:textSize="18sp"
                    app:layout_constraintTop_toBottomOf="@+id/tvProfile" android:layout_margin="8dp"
                    app:layout_constraintStart_toEndOf="@+id/tvSkillsLabel" android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"/>
            <TextView
                    android:text="@string/address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvPostalAddress"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:textSize="18sp"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/tvEmail"
                    app:layout_constraintStart_toEndOf="@+id/tvAddressLabel" android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvCareer" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvSkills" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                    tools:text="Career" android:textSize="18sp" app:layout_constraintStart_toEndOf="@+id/tvCareerLabel"
                    android:layout_marginStart="8dp" android:layout_marginLeft="8dp"/>
            <TextView
                    android:text="Profile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvProfile" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvPostalAddress"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:textSize="18sp"
                    app:layout_constraintStart_toEndOf="@+id/tvProfileLabel" android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"/>
            <TextView
                    android:text="ContactNumber:"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvPhoneLabale" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvNameLabel" android:textSize="18sp"/>
            <TextView
                    android:text="@string/email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/tvEmail" android:layout_weight="1"
                    android:textSize="18sp" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
                    app:layout_constraintStart_toEndOf="@+id/tvEmailLabel" android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp" android:layout_margin="8dp"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/tvPhoneNum"/>
            <TextView
                    android:text="Email Address:"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvEmailLabel" android:layout_margin="8dp"
                    android:textSize="18sp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvPhoneLabale" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"/>
            <TextView
                    android:text="@string/skills"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/tvSkillsLabel"
                    android:textSize="18sp"
                    android:layout_margin="8dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/tvProfile"/>
            <TextView
                    android:text="Postal Address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvAddressLabel" android:layout_margin="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvEmailLabel" android:textSize="18sp"/>
            <TextView
                    android:text="Educational Qualifications:"
                    android:layout_height="wrap_content" android:id="@+id/tvEducationLabel"
                    android:textSize="18sp"
                    android:layout_margin="8dp" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvCareer" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toStartOf="@+id/tvEducations" android:layout_marginRight="8dp"
                    android:layout_width="0dp"/>
            <TextView
                    android:text="Profile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvProfileLabel"
                    android:textSize="18sp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvPostalAddress" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"/>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>